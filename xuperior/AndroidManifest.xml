<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		package="net.sixro.xuperior" 
		android:versionCode="1" 
		android:versionName="1.0.0-SNAPSHOT"
	>

	<uses-sdk 
			android:minSdkVersion="10"
			android:targetSdkVersion="10"
		/>

	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity" android:screenOrientation="portrait" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".BoardActivity" android:screenOrientation="portrait" />
		<activity android:name=".CalibrateActivity" android:screenOrientation="portrait" />
		<activity android:name=".SettingsActivity" android:screenOrientation="portrait" />
	</application>

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest>

